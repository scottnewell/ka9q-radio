	$(CC) -c -fpic $(CFLAGS) -o $@ $^

rx888-pic.o: rx888.c
	$(CC) -c -fpic $(CFLAGS) -o $@ $^

airspyhf-pic.o: airspyhf.c
	$(CC) -c -fpic $(CFLAGS) -o $@ $^

ezusb-pic.o: ezusb.c
	$(CC) -c -fpic $(CFLAGS) -o $@ $^

hid-libusb-pic.o: hid-libusb.c
	$(CC) -c -fpic $(CFLAGS) -o $@ $^

fcd-pic.o: fcd.c
